<section class="edit-washingpoint">
  <div class="container">
    <h1>Edit Washing Point</h1>
    <form action="/admin/edit-washingpoint/<%= washingPoint._id %>" method="POST">
      <!-- Name -->
      <div class="form-group">
        <label for="name">Name</label>
        <input type="text" id="name" name="name" value="<%= washingPoint.name %>" required>
      </div>

      <!-- Location -->
      <div class="form-group">
        <label for="location">Location</label>
        <input type="text" id="location" name="location" value="<%= washingPoint.location %>" required>
      </div>

      <!-- Contact -->
      <div class="form-group">
        <label for="contact">Contact</label>
        <input type="text" id="contact" name="contact" value="<%= washingPoint.contact %>" required>
      </div>

      <!-- Services Available -->
      <div class="form-group">
        <label for="servicesAvailable">Services Available</label>
        <input type="text" id="servicesAvailable" name="servicesAvailable" value="<%= washingPoint.servicesAvailable.join(", ") %>" required>
      </div>

      <!-- Submit Button -->
      <div class="form-group">
        <button type="submit" class="btn">Update Washing Point</button>
      </div>
    </form>
  </div>
