<section class="manage-washingpoints">
  <div class="container">
    <h1>Manage Washing Points</h1>

    <!-- Add New Washing Point Button -->
    <div class="actions">
      <a href="/admin/add-washingpoint" class="btn">Add New Washing Point</a>
    </div>

    <!-- Washing Points Table -->
    <table>
      <thead>
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>Location</th>
          <th>Contact</th>
          <th>Services</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% if (washingPoints && washingPoints.length > 0) { %>
          <% washingPoints.forEach(point => { %>
            <tr>
              <td><%= point._id %></td>
              <td><%= point.name %></td>
              <td><%= point.location %></td>
              <td><%= point.contact %></td>
              <td>
                <% point.servicesAvailable.forEach(service => { %>
                  <span><%= service %></span><br>
                <% }) %>
              </td>
              <td>
                <a href="/admin/edit-washingpoint/<%= point._id %>" class="btn edit-btn">Edit</a>
                <a href="/admin/delete-washingpoint/<%= point._id %>" class="btn delete-btn" onclick="return confirm('Are you sure you want to delete this washing point?')">Delete</a>
              </td>
            </tr>
          <% }); %>
        <% } else { %>
          <tr>
            <td colspan="6">No washing points available.</td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>
</section>

