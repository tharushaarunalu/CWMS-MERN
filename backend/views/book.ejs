<%- include('includes/header') %>

<section class="booking">
  <div class="container">
    <h1>Book <%= plan.name %></h1>
    <p>Price: $<%= plan.price %></p>
    <ul>
      <% plan.services.forEach(service => { %>
        <li><%= service %></li>
      <% }) %>
    </ul>

    <form action="/book/confirm" method="POST">
      <!-- Hidden input to store the selected plan -->
      <input type="hidden" name="plan" value="<%= plan.name %>">

      <!-- Customer Name -->
      <div class="form-group">
        <label for="customerName">Your Name:</label>
        <input type="text" id="customerName" name="customerName" placeholder="Enter your name" required>
      </div>

      <!-- Car Model -->
      <div class="form-group">
        <label for="carModel">Car Model:</label>
        <input type="text" id="carModel" name="carModel" placeholder="Enter your car model" required>
      </div>

      <!-- Submit Button -->
      <div class="form-group">
        <button type="submit" class="btn">Confirm Booking</button>
      </div>
    </form>
  </div>
</section>

<%- include('includes/footer') %>
